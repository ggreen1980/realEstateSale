<div class="d-block w-100 pic mb-5">
    <img class="d-block w-100 pic" src="{{imagePath}}" alt="First slide">
</div>


<div class="row">
    <div class="offset-lg-1 col-6">
        <h3 class="text-center mb-1">{{this.location}}</h3>
        <h5 class="text-center mb-1">{{this.bedrooms}} bedroom / {{this.baths}} bath</h5><br>
        <h5 class="text-center mb-5">{{this.tag}}</h5>
        <div class="text-center">
            <a href="/apply/{{this.id}}"><button class="text-center btn btn-success m-1">Apply Now</button></a>
        </div>
    </div>
    <div class="col-4">
        <div id="slideshow-carousel-inside" class="carousel slide carousel-fade mb-5" data-ride="carousel" data-interval="3500">
            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#slideshow-carousel-inside" data-slide-to="0" class="active"></li>
                <li data-target="#slideshow-carousel-inside" data-slide-to="1"></li>
                <li data-target="#slideshow-carousel-inside" data-slide-to="2"></li>
            </ul>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 pic rounded" src="{{photoArray}}" alt="First slide">
                </div>
                {{#each propertyTwo}}
                <div class="carousel-item">
                    <img class="d-block w-100 pic rounded" src="{{this}}" alt="Second slide">
                </div>
                {{/each}}
            </div>
            <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#slideshow-carousel-inside" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#slideshow-carousel-inside" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
        </div>
    </div> 
</div>

<!-- Back to top -->
<div class="row">
    <div class="col d-flex justify-content-end mr-4">
        <a href="/details/{{id}}"><img src="../assets/arrow.jpeg"></a>
    </div>
</div>